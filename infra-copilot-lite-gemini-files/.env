# Copy this file to .env and set values
GEMINI_API_KEY="YOUR GEMINI API KEY"
GEMINI_MODEL="gemini-2.5-flash"
PORT="8000"


# ===== Local Health thresholds (optional) =====
LOCAL_CPU_WARN=85
LOCAL_MEM_WARN=90
LOCAL_DISK_WARN=90

# ===== Azure (optional) =====
# For LOCAL dev easiest is: az login, then set these:
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=

# Optional: if you want Service Principal auth instead of az login:
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# ===== Custom Endpoint Monitoring (optional) =====
# JSON array of endpoints to check (GET). Example:
# CUSTOM_ENDPOINTS=[{"name":"Google","url":"https://www.google.com"},{"name":"My API","url":"https://example.com/health"}]
CUSTOM_ENDPOINTS=[]
CUSTOM_ENDPOINT_TIMEOUT_SEC=5